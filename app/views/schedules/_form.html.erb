<%= form_for @schedule do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="col-md-12 well">
    <div class="col-md-12">
      <%= f.label t('schedules.form.event_name') %>
      <%= f.text_field :title, placeholder: t('schedules.form.event_title'), class: 'form-control' %>
    </div>
    <div class="col-md-12">
      <div class="col-md-5">
        <%= f.label t('schedules.form.start_time') %>
        <%= f.text_field :start_time, id: 'start-datetime', class: 'form-control', readonly: true, placeholder: t('schedules.form.start_time') %>
      </div>
      <div class="col-md-2"></div>
      <div class="col-md-5">
        <%= f.label t('schedules.form.finish_time') %>
        <%= f.text_field :finish_time, id: 'finish-datetime', class: 'form-control', readonly: true, placeholder: t('schedules.form.finish_time') %>
      </div>
    </div>

    <div class="col-md-12">
      <%= f.label t('schedules.form.room') %><br/>
      <%= f.select :room_id, Room.all.collect{|s| [s.name, s.id]}, {}, {class: 'select-room form-control'} %>
    </div>

    <div class="col-md-12">
      <%= f.label t('schedules.form.members') %><br/>
      <%= f.select :member_ids, User.all.collect{|s| [s.name, s.id]}, {}, {class: 'select-members form-control', multiple: :multiple} %>
    </div>

    <div class="col-md-12">
      <%= f.label t('schedules.form.description') %>
    <%= f.text_area :description, placeholder: t('schedules.form.compose_description'), class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-12 well">
    <%= f.submit t('schedules.form.submit'), class: "btn btn-primary" %>
  </div>
<% end %>
